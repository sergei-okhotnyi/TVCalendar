<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Card visible layout -->
    <FrameLayout
        android:id="@+id/card_main_layout"
        style="@style/card.main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <it.gmariotti.cardslib.library.view.component.CardThumbnailView
                android:id="@+id/card_thumbnail_layout"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_marginBottom="@dimen/card_header_simple_title_margin_top"
                android:layout_marginLeft="@dimen/card_header_simple_title_margin_left"
                android:layout_marginTop="@dimen/card_header_simple_title_margin_top"
                card:card_thumbnail_layout_resourceID="@layout/main_card_thumbnail" />

            <it.gmariotti.cardslib.library.view.component.CardHeaderView
                android:id="@+id/card_header_layout"
                style="@style/card.header_outer_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/card_thumbnail_layout" />

            <!-- Main Content View -->
            <FrameLayout
                android:id="@+id/card_main_content_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/card_header_layout"
                android:layout_below="@id/card_header_layout" />

            <FrameLayout
                android:id="@+id/card_content_expand_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_thumbnail_layout" />

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/card_overlap"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <!-- Compound view for Shadow
           If you want to customize this element use attr card:card_shadow_layout_resourceID -->
    <it.gmariotti.cardslib.library.view.component.CardShadowView
        android:id="@+id/card_shadow_layout"
        style="@style/card.shadow_outer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>